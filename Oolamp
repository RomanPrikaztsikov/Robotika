const int sensorPin = A0;  // Photoresistor on A0
const int ledPin = 9;      // LED on pin 9

void setup() {
  pinMode(ledPin, OUTPUT);     // Set LED as output
  Serial.begin(9600);          // Start serial monitor
}

void loop() {
  int lightLevel = analogRead(sensorPin);  // Read photoresistor value

  Serial.println(lightLevel);  // Print light value for debugging

  if (lightLevel > 600) {      // If it's dark (higher value)
    digitalWrite(ledPin, HIGH); // Turn LED on
  } else {
    digitalWrite(ledPin, LOW);  // Turn LED off
  }

  delay(100);  // Small delay
}
